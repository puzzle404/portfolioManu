<div class="container main-content my-0">
	<div class="row g-2 h-100 flex-wrap">
		<div class="col-lg-6 col-md-6 col-sm-12 left-column">
			<%= render 'leftside_landing' %>
		</div>

		<div class="col-lg-6 col-md-6 col-sm-12 right-column">
      <div class="description mx-2" id='about'>
        <%= render 'pages/about_description' %>
      </div>

      <div class="experience-section" id='projects'>
        <%= render partial: 'project', collection: @projects %>
      </div>

       <div class="experience-section" id='experience'>
        <%= render partial: 'experience', collection: @experiences %>
      </div>
		</div>
	</div>
  <%= turbo_frame_tag 'modal', data: {turbo_action:'advance'} %>
</div>
