
<%= turbo_frame_tag "modal", data: {turbo_action: 'advance'} do %>
<meta name="turbo-visit-control" content="reload">
  <%= tag.div data: { controller: "turbo-modal",
                      turbo_modal_target: "modal",
                      action: "turbo:submit-end->turbo-modal#submitEnd keyup@window->turbo-modal#closeWithKeyboard " },
                      class: "modal d-block show" do %>

    <div class="modal-dialog modal-dialog-centered <%= @modal_dialog %>" role="document">
      <div class="modal-content modal_container_shadow <%= @clases %>">
        <div class="modal-header <%= @modal_h %>">
          <h5 class="modal-title"><%= @title %></h5>
          <%= link_to root_path do %>
            <%= button_tag type: "button", class: "close", style: "border: none; background: none;" do %>
              <span aria-hidden="true"><i class="fa-solid fa-xmark text-light"></i></span>
            <% end %>
          <% end %>
        </div>
        <div class="modal-body <%= @modal_b %>">
          <%= content %>
        </div>
      </div>
    </div>
  <% end %>
  <style>
    .modal-backdrop {
      background-color: #00000054;
    }
  </style>
<% end %>
